extends base.pug
block style 
    style
         include ../static/style.css
         include ../static/styleContact.css
block content
    div.container
        h1 Contact Us
        form(action="/contact",class='myForm',method='post')
            input(type="text",name='name', class='myInput', placeholder='Enter your name')
            input(type="phone",name='phone', class='myInput', placeholder='Enter your phone-number')
            input(type="email",name='email', class='myInput', placeholder='Enter your E-mail')
            input(type="text",name='address', class='myInput', placeholder='Enter your address')
            input(type="desc",name='desc', class='myInput', placeholder='More About You')
            button(class='btn' type='submit')
                |Submit